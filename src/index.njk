<script>
  const phrases = [
    "efficient, scalable systems.",
    "simple solutions to complex problems.",
    "tools that make life easier.",
    "clean, maintainable code."
  ];

  let phraseIndex = 0;
  let charIndex = 0;
  const typewriter = document.getElementById("typewriter");

  function type() {
    if (charIndex <= phrases[phraseIndex].length) {
      typewriter.textContent = "I enjoy building " + phrases[phraseIndex].slice(0, charIndex) + "|";
      charIndex++;
      setTimeout(type, 100);
    } else {
      setTimeout(erase, 1800);
    }
  }

  function erase() {
    if (charIndex > 0) {
      typewriter.textContent = "I enjoy building " + phrases[phraseIndex].slice(0, charIndex - 1) + "|";
      charIndex--;
      setTimeout(erase, 50);
    } else {
      phraseIndex = (phraseIndex + 1) % phrases.length;
      setTimeout(type, 500);
    }
  }

  type();
</script>
